<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exemplo2.WordsPage">
    <ContentPage.Content>

        <ListView x:Name="listOfWords">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout Wrap="Wrap" Direction="Row" JustifyContent="SpaceAround">

                            <Label Text="{Binding .}" WidthRequest="150" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                           
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </ContentPage.Content>
</ContentPage>